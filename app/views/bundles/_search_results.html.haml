#main{:style => "float:left;",:class => 'display_search_results'}
  - unless @titles.empty?
    - @titles.each do |t|
      - t = Title.find(t)
      .item1{:style => "width:20%;",:id => "search_title_#{t.id}"}
        .item-inner
          %p.image-display{:style => 'margin: 11px 0px -9px 0px;'}
            = render_image(t, "67x99")
            .addClassContent{:style => "margin: -10px 0px 0px 50px;"}
              = link_to '#' ,:style => "color: #fff;" ,:class => 'add_to_bundle',:title_id => t.id do
                +
          .author
            = t.try(:author_name).titlecase.truncate(12)
          .ratings
            .rating-box
              .rating
            %p.rating-links
              %a{:href => ""}
                0 Review
              %span.separator
                |
              %a{:href => ""}
                Add Your Review
  - else
    %b{:style => 'color:white'}
      = "No Data"
