- unless @bundle_titles.empty?
  - @bundle_titles.each do |t|
    - t = Title.find(t)
    .item.buntles-items{:style => "width:20%;",:id => "bundle_title_#{t.id}"}
      .item-inner
        %p.image-display{:style => 'margin: 11px 0px -9px 0px;'}
          = render_image(t, "67x99")
          .addClassContent{:style => "margin: -10px 0px 0px 50px;"}
            = link_to '#' ,:style => "color: #fff;" ,:class => 'remove_from_bundle',:title_id => t.id do
              = "-"
- else
  #main{:style => "float:left;margin-bottom: -59px;",:class => 'display_search_results'}
    - 6.times do
      .item.buntles-items{:style => "width:20%;border: solid 2px #B8B8B8;height: 92px;margin: 7px 23px 5px -6px;"}
%div{:style => "width:100%; float:left;"}
  %span#product-price-12_jmslider.regular-price{:style => "margin:30px 0 0 0; float:left"}
    %span.price{:style => "color:#FFFFFF"} Total:
    %span.price
      &#x20B9
      = @bundle_price
  .add-to-cart{:style => " float:right;"}
    %button.button.btn-cart{:onclick => "location.href = '/bundles/create_bundle'", :title => "", :type => "button"}
      %span
        %span
          %i.icon-shopping-cart>
          BUNDLE THIS





