= form_for @bundle do |f|
  - if @bundle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bundle.errors.count, "error")} prohibited this bundle from being saved:"
      %ul
        - @bundle.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :category
    = f.text_field :category
  .actions
    = f.submit 'Save'
